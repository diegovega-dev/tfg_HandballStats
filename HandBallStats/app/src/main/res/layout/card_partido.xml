<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#AE8AB4F8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageButton
            android:id="@+id/borrarPartido"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Borrar partido"
            android:src="@drawable/basura"
            app:tint="@android:color/holo_red_light"/>

        <TextView
            android:id="@+id/partidoResultadoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 - 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/secundario"
            android:layout_toStartOf="@id/borrarPartido"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/partidoNombreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Equipo A vs Equipo B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/texto"
            android:layout_toStartOf="@id/partidoResultadoText"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/partidoFechaText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/05/2025"
            android:textSize="14sp"
            android:textColor="#B6B6B6"
            android:layout_below="@id/partidoNombreText"
            android:layout_alignStart="@id/partidoNombreText"
            android:layout_marginTop="4dp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
